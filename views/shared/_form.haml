%form{action: '/contacts', method: 'POST'}
  #top_form
    .field
      %label{for: 'name'} Ваше ФИО*
      %input{type: 'text', name: 'contact[name]', placeholder: 'Ваше имя'}
    .field
      %label{for: 'email'} Ваш email
      %input{type: 'text', name: 'contact[email]', placeholder: 'ya@yandex.ru'}
    .field
      %label{for: 'tel'} Ваш телефон*
      %input{type: 'text', name: 'contact[tel]', placeholder: '89045883333'}
    .field
      %label{for: 'serv'} Услуга
      %input{type: 'text', name: 'contact[serv]', placeholder: 'Перевозка'}
  #bottom_form
    .field
      %label{for: 'extra_info'} Ваше сообщение*
      %textarea{name: 'contact[extra_info]', placeholder: 'Звонить с 9 до 21 вечера'}
    .form_button
      %input{type: 'submit', value: 'Отправить'}



